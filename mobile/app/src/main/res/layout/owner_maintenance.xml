<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OwnerMaintenanceActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/registrationNumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lemon"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lemon"
            android:text="Track Your\nVehicle\nMaintenance"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="152dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/details" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_section"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/lexenddecabold"
                android:text="Stay on top of your vehicle's\nupkeep"
                android:textColor="@color/bluedark"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/c4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- TextView for the title -->
                    <TextView
                        android:id="@+id/tex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/lexenddecabold"
                        android:text="Upcoming maintenance"
                        android:textColor="@color/bluedark"
                        android:textSize="20sp" />

                    <!-- TextView for upcoming maintenance record -->
                    <TextView
                        android:id="@+id/upcomin_recode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/lexenddecamedium"
                        android:text="Add Your Upcoming maintenance"
                        android:textColor="@color/bluedark"
                        android:textSize="14dp" />

                    <!-- Button to add upcoming maintenance -->
                    <Button
                        android:id="@+id/addup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add upcoming"
                        android:textSize="16dp"
                        android:layout_gravity="bottom|right"
                        android:textColor="@color/white"
                        android:fontFamily="@font/lexenddecabold"
                        android:background="@drawable/buttonshine" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/c5"
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/bluelight"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <TextView
                    android:id="@+id/he"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/lexenddecabold"
                    android:text="Service History Recodes"
                    android:textColor="@color/bluedark"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/lexenddecamedium"
                    android:text="Click here to see your list of past services with dates and service types"
                    android:textColor="@color/bluedark"
                    android:textSize="14dp" />
                <Button
                    android:id="@+id/service_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lets show my records"
                    android:textSize="18dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center|bottom|right"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lexenddecabold"
                    android:background="@drawable/buttonshine"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/c6"
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/bluelight"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <TextView
                    android:id="@+id/he2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/lexenddecabold"
                    android:text="Add Service Recodes"
                    android:textColor="@color/bluedark"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/lexenddecamedium"
                    android:text="Click here to add new finished maintenance records"
                    android:textColor="@color/bluedark"
                    android:textSize="14dp" />
                <Button
                    android:id="@+id/service_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lets add new records"
                    android:textSize="18dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center|bottom|right"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lexenddecabold"
                    android:background="@drawable/buttonshine"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>